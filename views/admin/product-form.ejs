<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= editing ? 'Edit Product' : 'Add Product' %> | Admin Dashboard
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #004768;
            --primary-light: #006992;
            --secondary-color: #00a8e8;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --dark-color: #111827;
            --gray-dark: #374151;
            --gray-medium: #6b7280;
            --gray-light: #9ca3af;
            --light-color: #f3f4f6;
            --border-color: #e5e7eb;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
            --shadow-xl: 0 20px 40px -10px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --border-radius: 12px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            color: var(--dark-color);
            line-height: 1.6;
            min-height: 100vh;
            padding: 20px;
        }

        .form-container {
            max-width: 1200px;
            margin: 0 auto;
            animation: fadeIn 0.6s ease-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Header */
        .form-header {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            color: white;
            padding: 40px;
            border-radius: var(--border-radius) var(--border-radius) 0 0;
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }

        .form-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
            background-size: 20px 20px;
            opacity: 0.3;
            transform: rotate(30deg);
        }

        .header-content {
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .header-title {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .header-icon {
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
        }

        .header-text h1 {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .header-text p {
            opacity: 0.9;
            font-size: 1.1rem;
        }

        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 10px;
            background: rgba(255, 255, 255, 0.15);
            padding: 12px 20px;
            border-radius: 30px;
            backdrop-filter: blur(10px);
        }

        .breadcrumb a {
            color: white;
            text-decoration: none;
            transition: var(--transition);
        }

        .breadcrumb a:hover {
            opacity: 0.8;
        }

        .breadcrumb span {
            color: rgba(255, 255, 255, 0.7);
        }

        /* Form Card */
        .form-card {
            background: white;
            border-radius: 0 0 var(--border-radius) var(--border-radius);
            padding: 50px;
            box-shadow: var(--shadow-xl);
            margin-bottom: 50px;
        }

        /* Form Layout */
        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            margin-bottom: 40px;
        }

        /* Form Groups */
        .form-group {
            margin-bottom: 30px;
        }

        .form-group label {
            display: block;
            margin-bottom: 12px;
            font-weight: 600;
            color: var(--dark-color);
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-group label i {
            color: var(--primary-color);
            font-size: 1.2rem;
            width: 24px;
        }

        .form-control {
            width: 100%;
            padding: 16px 20px;
            border: 2px solid var(--border-color);
            border-radius: 10px;
            font-size: 1rem;
            font-family: 'Inter', sans-serif;
            transition: var(--transition);
            background: white;
            color: var(--dark-color);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(0, 71, 104, 0.1);
        }

        .form-control::placeholder {
            color: var(--gray-light);
        }

        textarea.form-control {
            min-height: 150px;
            resize: vertical;
            line-height: 1.5;
        }

        /* File Upload */
        .file-upload-container {
            margin-top: 10px;
        }

        .upload-area {
            border: 2px dashed var(--border-color);
            border-radius: 10px;
            padding: 40px 20px;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
            background: var(--light-color);
            position: relative;
            overflow: hidden;
        }

        .upload-area:hover {
            border-color: var(--primary-color);
            background: rgba(0, 71, 104, 0.02);
        }

        .upload-area.dragover {
            border-color: var(--success-color);
            background: rgba(16, 185, 129, 0.05);
        }

        .upload-icon {
            font-size: 3rem;
            color: var(--gray-light);
            margin-bottom: 15px;
            transition: var(--transition);
        }

        .upload-area:hover .upload-icon {
            color: var(--primary-color);
            transform: translateY(-5px);
        }

        .upload-text h4 {
            font-size: 1.2rem;
            color: var(--dark-color);
            margin-bottom: 8px;
        }

        .upload-text p {
            color: var(--gray-medium);
            font-size: 0.95rem;
            margin-bottom: 15px;
        }

        .browse-button {
            display: inline-block;
            background: var(--primary-color);
            color: white;
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
        }

        .browse-button:hover {
            background: var(--primary-light);
            transform: translateY(-2px);
        }

        #images {
            display: none;
        }

        /* Image Preview */
        .image-preview-container {
            margin-top: 30px;
        }

        .current-images {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-top: 15px;
        }

        .image-preview {
            position: relative;
            width: 120px;
            height: 120px;
            border-radius: 8px;
            overflow: hidden;
            border: 2px solid var(--border-color);
            transition: var(--transition);
        }

        .image-preview:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow);
        }

        .image-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: var(--transition);
        }

        .image-preview:hover .image-overlay {
            opacity: 1;
        }

        .remove-image {
            background: var(--danger-color);
            color: white;
            border: none;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
        }

        .remove-image:hover {
            transform: scale(1.1);
            background: #dc2626;
        }

        /* Uploaded Files Preview */
        .uploaded-files {
            margin-top: 20px;
            display: none;
        }

        .file-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background: var(--light-color);
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .file-icon {
            color: var(--primary-color);
            font-size: 1.5rem;
        }

        .file-info {
            flex: 1;
        }

        .file-name {
            font-weight: 500;
            color: var(--dark-color);
            margin-bottom: 4px;
        }

        .file-size {
            font-size: 0.85rem;
            color: var(--gray-medium);
        }

        .remove-file {
            color: var(--danger-color);
            background: none;
            border: none;
            font-size: 1.2rem;
            cursor: pointer;
            padding: 5px;
            border-radius: 4px;
            transition: var(--transition);
        }

        .remove-file:hover {
            background: rgba(239, 68, 68, 0.1);
        }

        /* Form Actions */
        .form-actions {
            display: flex;
            gap: 20px;
            margin-top: 50px;
            padding-top: 30px;
            border-top: 1px solid var(--border-color);
            flex-wrap: wrap;
        }

        .btn {
            padding: 16px 32px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1.1rem;
            text-decoration: none;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            cursor: pointer;
            border: none;
            min-width: 180px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            color: white;
            box-shadow: 0 4px 15px rgba(0, 71, 104, 0.2);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 71, 104, 0.3);
        }

        .btn-secondary {
            background: white;
            color: var(--primary-color);
            border: 2px solid var(--border-color);
        }

        .btn-secondary:hover {
            border-color: var(--primary-color);
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-danger {
            background: white;
            color: var(--danger-color);
            border: 2px solid var(--border-color);
        }

        .btn-danger:hover {
            border-color: var(--danger-color);
            transform: translateY(-3px);
        }

        /* Validation Messages */
        .validation-message {
            font-size: 0.9rem;
            margin-top: 8px;
            padding: 8px 12px;
            border-radius: 6px;
            display: none;
        }

        .validation-error {
            background: rgba(239, 68, 68, 0.1);
            color: var(--danger-color);
            border-left: 4px solid var(--danger-color);
        }

        .validation-success {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success-color);
            border-left: 4px solid var(--success-color);
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .form-card {
                padding: 40px 30px;
            }

            .form-header {
                padding: 30px;
            }

            .header-text h1 {
                font-size: 2rem;
            }

            .form-grid {
                gap: 30px;
            }
        }

        @media (max-width: 768px) {
            body {
                padding: 15px;
            }

            .form-container {
                padding: 0;
            }

            .form-card {
                padding: 30px 20px;
                border-radius: var(--border-radius);
            }

            .form-header {
                border-radius: var(--border-radius);
                padding: 25px;
            }

            .header-content {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .breadcrumb {
                align-self: stretch;
                justify-content: center;
            }

            .form-grid {
                grid-template-columns: 1fr;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                text-align: center;
            }

            .current-images {
                justify-content: center;
            }
        }

        @media (max-width: 576px) {
            .header-text h1 {
                font-size: 1.8rem;
            }

            .header-icon {
                width: 50px;
                height: 50px;
                font-size: 1.5rem;
            }

            .form-group label {
                font-size: 1rem;
            }

            .upload-area {
                padding: 30px 15px;
            }

            .upload-icon {
                font-size: 2.5rem;
            }

            .image-preview {
                width: 100px;
                height: 100px;
            }
        }

        @media (max-width: 400px) {
            .header-text h1 {
                font-size: 1.6rem;
            }

            .form-control {
                padding: 14px 16px;
            }

            .btn {
                padding: 14px 20px;
                font-size: 1rem;
            }
        }

        /* Animation for form elements */
        .form-group {
            animation: slideUp 0.5s ease forwards;
            opacity: 0;
            transform: translateY(20px);
        }

        @keyframes slideUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Stagger animations */
        .form-group:nth-child(1) {
            animation-delay: 0.1s;
        }

        .form-group:nth-child(2) {
            animation-delay: 0.2s;
        }

        .form-group:nth-child(3) {
            animation-delay: 0.3s;
        }

        .form-group:nth-child(4) {
            animation-delay: 0.4s;
        }

        .form-group:nth-child(5) {
            animation-delay: 0.5s;
        }
    </style>
</head>

<body>
    <div class="form-container">
        <!-- Header Section -->
        <div class="form-header">
            <div class="header-content">
                <div class="header-title">
                    <div class="header-icon">
                        <i class="fas fa-<%= editing ? 'edit' : 'plus-circle' %>"></i>
                    </div>
                    <div class="header-text">
                        <h1>
                            <%= editing ? 'Edit Product' : 'Add New Product' %>
                        </h1>
                        <p>
                            <%= editing ? 'Update existing product details' : 'Create a new product for your store' %>
                        </p>
                    </div>
                </div>

                <div class="breadcrumb">
                    <a href="/admin/dashboard"><i class="fas fa-home"></i> Dashboard</a>
                    <i class="fas fa-chevron-right"></i>
                    <a href="/admin/dashboard">Products</a>
                    <i class="fas fa-chevron-right"></i>
                    <span>
                        <%= editing ? 'Edit' : 'Add New' %>
                    </span>
                </div>
            </div>
        </div>

        <!-- Form Section -->
        <div class="form-card">
            <form action="/admin/<%= editing ? 'edit-product/' + product._id : 'add-product' %>" method="POST"
                enctype="multipart/form-data" id="productForm">

                <div class="form-grid">
                    <!-- Left Column -->
                    <div>
                        <!-- Product Name -->
                        <div class="form-group">
                            <label for="name">
                                <i class="fas fa-tag"></i>
                                Product Name
                            </label>
                            <input type="text" name="name" id="name" class="form-control"
                                value="<%= editing ? product.name : '' %>" required placeholder="Enter product name">
                            <div class="validation-message validation-error" id="nameError">
                                Please enter a product name
                            </div>
                        </div>

                        <!-- Price -->
                        <div class="form-group">
                            <label for="price">
                                <i class="fas fa-dollar-sign"></i>
                                Price
                            </label>
                            <input type="number" step="0.01" min="0" name="price" id="price" class="form-control"
                                value="<%= editing ? product.price : '' %>" required placeholder="0.00">
                            <div class="validation-message validation-error" id="priceError">
                                Please enter a valid price
                            </div>
                        </div>

                        <!-- Category -->
                        <div class="form-group">
                            <label for="category">
                                <i class="fas fa-tags"></i>
                                Category
                            </label>
                            <input type="text" name="category" id="category" class="form-control"
                                value="<%= editing ? product.category : '' %>"
                                placeholder="e.g., Smartphone, Tablet, Accessories">
                            <div class="validation-message validation-success">
                                Optional - helps with product organization
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div>
                        <!-- Description -->
                        <div class="form-group">
                            <label for="description">
                                <i class="fas fa-align-left"></i>
                                Description
                            </label>
                            <textarea name="description" id="description" class="form-control" rows="5" required
                                placeholder="Describe your product in detail..."><%= editing ? product.description : '' %></textarea>
                            <div class="validation-message validation-error" id="descriptionError">
                                Please enter a product description
                            </div>
                        </div>

                        <!-- Images -->
                        <div class="form-group">
                            <label for="images">
                                <i class="fas fa-images"></i>
                                Product Images
                            </label>

                            <!-- Existing Images -->
                            <% if (editing && product.images && product.images.length> 0) { %>
                                <div class="image-preview-container">
                                    <p style="margin-bottom: 15px; color: var(--gray-medium); font-weight: 500;">
                                        Current Images
                                    </p>
                                    <div class="current-images">
                                        <% product.images.forEach((img, index)=> { %>
                                            <div class="image-preview">
                                                <img src="/uploads/<%= img %>" alt="Product Image"
                                                    onerror="this.src='https://via.placeholder.com/120x120/004768/ffffff?text=Image+Error'">
                                                <div class="image-overlay">
                                                    <button type="button" class="remove-image"
                                                        onclick="markImageForRemoval('<%= img %>', this)">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <% }); %>
                                    </div>
                                    <p style="margin-top: 15px; color: var(--gray-medium); font-size: 0.95rem;">
                                        <i class="fas fa-info-circle"></i>
                                        New images will be added to existing ones
                                    </p>
                                </div>
                                <% } %>

                                    <!-- File Upload Area -->
                                    <div class="file-upload-container">
                                        <div class="upload-area" id="uploadArea">
                                            <div class="upload-icon">
                                                <i class="fas fa-cloud-upload-alt"></i>
                                            </div>
                                            <div class="upload-text">
                                                <h4>Upload Product Images</h4>
                                                <p>Drag & drop images or click to browse</p>
                                                <div class="browse-button">
                                                    Browse Files
                                                </div>
                                            </div>
                                            <input type="file" name="images" id="images" multiple accept="image/*"
                                                <%=editing ? '' : 'required' %>>
                                        </div>

                                        <!-- Uploaded Files Preview -->
                                        <div class="uploaded-files" id="uploadedFiles"></div>

                                        <!-- Hidden field for images to remove -->
                                        <input type="hidden" name="imagesToRemove" id="imagesToRemove" value="">
                                    </div>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-<%= editing ? 'save' : 'plus-circle' %>"></i>
                        <%= editing ? 'Update Product' : 'Add Product' %>
                    </button>

                    <a href="/admin/dashboard" class="btn btn-danger">
                        <i class="fas fa-times"></i>
                        Cancel
                    </a>

                    <% if (editing) { %>
                        <a href="/product/<%= product._id %>" target="_blank" class="btn btn-secondary">
                            <i class="fas fa-eye"></i>
                            View Product
                        </a>
                        <% } %>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Form Validation
        const form = document.getElementById('productForm');
        const nameInput = document.getElementById('name');
        const priceInput = document.getElementById('price');
        const descriptionInput = document.getElementById('description');

        function validateForm() {
            let isValid = true;

            // Validate name
            if (!nameInput.value.trim()) {
                showError('nameError', 'Please enter a product name');
                nameInput.style.borderColor = 'var(--danger-color)';
                isValid = false;
            } else {
                hideError('nameError');
                nameInput.style.borderColor = 'var(--border-color)';
            }

            // Validate price
            if (!priceInput.value || parseFloat(priceInput.value) <= 0) {
                showError('priceError', 'Please enter a valid price');
                priceInput.style.borderColor = 'var(--danger-color)';
                isValid = false;
            } else {
                hideError('priceError');
                priceInput.style.borderColor = 'var(--border-color)';
            }

            // Validate description
            if (!descriptionInput.value.trim()) {
                showError('descriptionError', 'Please enter a product description');
                descriptionInput.style.borderColor = 'var(--danger-color)';
                isValid = false;
            } else {
                hideError('descriptionError');
                descriptionInput.style.borderColor = 'var(--border-color)';
            }

            return isValid;
        }

        function showError(elementId, message) {
            const element = document.getElementById(elementId);
            element.textContent = message;
            element.style.display = 'block';
        }

        function hideError(elementId) {
            const element = document.getElementById(elementId);
            element.style.display = 'none';
        }

        // File Upload Functionality
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('images');
        const uploadedFilesContainer = document.getElementById('uploadedFiles');
        let uploadedFiles = [];

        // Click on upload area to trigger file input
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });

        // File input change event
        fileInput.addEventListener('change', handleFileSelect);

        // Drag and drop functionality
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            uploadArea.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            uploadArea.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            uploadArea.addEventListener(eventName, unhighlight, false);
        });

        function highlight() {
            uploadArea.classList.add('dragover');
        }

        function unhighlight() {
            uploadArea.classList.remove('dragover');
        }

        uploadArea.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            handleFiles(files);
        }

        function handleFileSelect(e) {
            const files = e.target.files;
            handleFiles(files);
        }

        function handleFiles(files) {
            uploadedFiles = [...uploadedFiles, ...files];
            updateFilePreview();
        }

        function updateFilePreview() {
            if (uploadedFiles.length === 0) {
                uploadedFilesContainer.style.display = 'none';
                return;
            }

            uploadedFilesContainer.style.display = 'block';
            uploadedFilesContainer.innerHTML = '';

            uploadedFiles.forEach((file, index) => {
                const fileItem = document.createElement('div');
                fileItem.className = 'file-item';

                const fileIcon = document.createElement('i');
                fileIcon.className = 'file-icon fas fa-file-image';

                const fileInfo = document.createElement('div');
                fileInfo.className = 'file-info';

                const fileName = document.createElement('div');
                fileName.className = 'file-name';
                fileName.textContent = file.name;

                const fileSize = document.createElement('div');
                fileSize.className = 'file-size';
                fileSize.textContent = formatFileSize(file.size);

                const removeBtn = document.createElement('button');
                removeBtn.className = 'remove-file';
                removeBtn.innerHTML = '<i class="fas fa-times"></i>';
                removeBtn.type = 'button';
                removeBtn.onclick = () => removeFile(index);

                fileInfo.appendChild(fileName);
                fileInfo.appendChild(fileSize);

                fileItem.appendChild(fileIcon);
                fileItem.appendChild(fileInfo);
                fileItem.appendChild(removeBtn);

                uploadedFilesContainer.appendChild(fileItem);
            });

            // Update file input
            const dataTransfer = new DataTransfer();
            uploadedFiles.forEach(file => dataTransfer.items.add(file));
            fileInput.files = dataTransfer.files;
        }

        function removeFile(index) {
            uploadedFiles.splice(index, 1);
            updateFilePreview();

            // Update file input
            const dataTransfer = new DataTransfer();
            uploadedFiles.forEach(file => dataTransfer.items.add(file));
            fileInput.files = dataTransfer.files;

            // If no files left, hide preview
            if (uploadedFiles.length === 0) {
                uploadedFilesContainer.style.display = 'none';
            }
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Image removal for existing images
        const imagesToRemove = [];

        function markImageForRemoval(imageName, button) {
            const index = imagesToRemove.indexOf(imageName);
            if (index === -1) {
                imagesToRemove.push(imageName);
                button.closest('.image-preview').style.opacity = '0.5';
                button.innerHTML = '<i class="fas fa-undo"></i>';
                button.style.background = 'var(--warning-color)';
            } else {
                imagesToRemove.splice(index, 1);
                button.closest('.image-preview').style.opacity = '1';
                button.innerHTML = '<i class="fas fa-trash"></i>';
                button.style.background = 'var(--danger-color)';
            }

            document.getElementById('imagesToRemove').value = imagesToRemove.join(',');
        }

        // Form submission
        form.addEventListener('submit', function (e) {
            if (!validateForm()) {
                e.preventDefault();
                // Add shake animation to form
                form.style.animation = 'shake 0.5s ease-in-out';
                setTimeout(() => {
                    form.style.animation = '';
                }, 500);
                return false;
            }

            // Add loading state to submit button
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            submitBtn.disabled = true;
        });

        // Auto-save draft (optional feature)
        let saveTimeout;
        function autoSaveDraft() {
            clearTimeout(saveTimeout);
            saveTimeout = setTimeout(() => {
                const formData = {
                    name: nameInput.value,
                    price: priceInput.value,
                    category: document.getElementById('category').value,
                    description: descriptionInput.value
                };
                localStorage.setItem('productDraft', JSON.stringify(formData));
                console.log('Draft saved');
            }, 2000);
        }

        // Load draft on page load (if not editing)
        <% if (!editing) { %>
            document.addEventListener('DOMContentLoaded', function () {
                const draft = localStorage.getItem('productDraft');
                if (draft) {
                    const formData = JSON.parse(draft);
                    nameInput.value = formData.name || '';
                    priceInput.value = formData.price || '';
                    document.getElementById('category').value = formData.category || '';
                    descriptionInput.value = formData.description || '';

                    // Show notification
                    showNotification('Draft loaded from previous session', 'success');
                }
            });

            // Auto-save on input
            [nameInput, priceInput, descriptionInput, document.getElementById('category')].forEach(input => {
                input.addEventListener('input', autoSaveDraft);
            });
        <% } %>

            // Clear draft on successful form submission
            form.addEventListener('submit', function () {
                localStorage.removeItem('productDraft');
            });

        // Notification function
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 15px 25px;
                background: ${type === 'success' ? 'var(--success-color)' : 'var(--warning-color)'};
                color: white;
                border-radius: 8px;
                box-shadow: var(--shadow);
                z-index: 1000;
                animation: slideInRight 0.3s ease;
            `;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.style.animation = 'slideOutRight 0.3s ease';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }

        // Add CSS for notification animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideInRight {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            @keyframes slideOutRight {
                from { transform: translateX(0); opacity: 1; }
                to { transform: translateX(100%); opacity: 0; }
            }
            @keyframes shake {
                0%, 100% { transform: translateX(0); }
                25% { transform: translateX(-5px); }
                75% { transform: translateX(5px); }
            }
        `;
        document.head.appendChild(style);
    </script>
