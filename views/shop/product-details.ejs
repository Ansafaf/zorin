<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.name %> | Zorin Mobile Shop
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #004768;
            --primary-light: #006992;
            --secondary-color: #28a745;
            --dark-color: #333;
            --gray-color: #666;
            --light-gray: #f8f9fa;
            --border-color: #eaeaea;
            --shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            --shadow-light: 0 3px 10px rgba(0, 0, 0, 0.05);
            --transition: all 0.3s ease;
            --border-radius: 12px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #fff;
            color: var(--dark-color);
            line-height: 1.6;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 30px 20px;
        }

        /* Breadcrumb */
        .breadcrumb {
            margin-bottom: 30px;
            font-size: 0.95rem;
        }

        .breadcrumb a {
            color: var(--primary-color);
            text-decoration: none;
            transition: var(--transition);
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

        .breadcrumb span {
            color: var(--gray-color);
        }

        /* Product Container */
        .product-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 60px;
            margin-bottom: 60px;
        }

        /* Product Gallery */
        .product-gallery {
            position: relative;
        }

        .main-image {
            width: 100%;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--shadow);
            background: var(--light-gray);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 500px;
        }

        .main-image img {
            width: 100%;
            height: auto;
            max-height: 500px;
            object-fit: contain;
            padding: 20px;
            transition: var(--transition);
        }

        .image-placeholder {
            width: 100%;
            height: 500px;
            background: linear-gradient(135deg, var(--light-gray) 0%, #e9ecef 100%);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: var(--gray-color);
            border-radius: var(--border-radius);
        }

        .image-placeholder i {
            font-size: 4rem;
            margin-bottom: 20px;
            color: #ccc;
        }

        /* Thumbnail Gallery */
        .thumbnail-gallery {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(90px, 1fr));
            gap: 12px;
            margin-top: 20px;
        }

        .thumbnail {
            width: 100%;
            aspect-ratio: 1;
            border-radius: 8px;
            overflow: hidden;
            cursor: pointer;
            border: 2px solid transparent;
            transition: var(--transition);
            background: var(--light-gray);
        }

        .thumbnail.active {
            border-color: var(--primary-color);
            transform: scale(1.05);
        }

        .thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Product Details */
        .product-details {
            padding: 20px 0;
        }

        .product-brand {
            color: var(--primary-color);
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .product-title {
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 20px;
            color: var(--dark-color);
        }

        .product-price {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--secondary-color);
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .original-price {
            font-size: 1.8rem;
            color: var(--gray-color);
            text-decoration: line-through;
        }

        .product-description {
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--dark-color);
            margin-bottom: 40px;
            padding: 25px;
            background: var(--light-gray);
            border-radius: var(--border-radius);
            border-left: 4px solid var(--primary-color);
        }

        /* Product Meta */
        .product-meta {
            display: flex;
            gap: 30px;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--border-color);
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .meta-item i {
            color: var(--primary-color);
            font-size: 1.2rem;
        }

        .meta-label {
            font-size: 0.9rem;
            color: var(--gray-color);
        }

        .meta-value {
            font-weight: 600;
            color: var(--dark-color);
        }

        /* Add to Cart Form */
        .cart-form {
            background: var(--light-gray);
            padding: 30px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-light);
        }

        .quantity-selector {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
        }

        .quantity-label {
            font-weight: 600;
            font-size: 1.1rem;
            color: var(--dark-color);
        }

        .quantity-input {
            display: flex;
            align-items: center;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            overflow: hidden;
            background: white;
        }

        .quantity-btn {
            width: 45px;
            height: 45px;
            background: white;
            border: none;
            font-size: 1.2rem;
            cursor: pointer;
            color: var(--primary-color);
            transition: var(--transition);
        }

        .quantity-btn:hover {
            background: var(--light-gray);
        }

        .quantity-input input {
            width: 70px;
            height: 45px;
            border: none;
            text-align: center;
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark-color);
        }

        .quantity-input input:focus {
            outline: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            color: white;
            border: none;
            padding: 18px 40px;
            font-size: 1.2rem;
            font-weight: 600;
            border-radius: 10px;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            width: 100%;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 71, 104, 0.2);
        }

        .btn-primary i {
            font-size: 1.3rem;
        }

        /* Stock Status */
        .stock-status {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 20px;
            color: var(--secondary-color);
            font-weight: 600;
        }

        .stock-status.in-stock {
            color: var(--secondary-color);
        }

        .stock-status.out-of-stock {
            color: #dc3545;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .product-container {
                gap: 40px;
            }

            .main-image {
                min-height: 400px;
            }

            .main-image img {
                max-height: 400px;
            }

            .image-placeholder {
                height: 400px;
            }
        }

        @media (max-width: 992px) {
            .product-container {
                grid-template-columns: 1fr;
                gap: 40px;
            }

            .product-title {
                font-size: 2.2rem;
            }

            .product-price {
                font-size: 2rem;
            }

            .thumbnail-gallery {
                grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .container {
                padding: 20px 15px;
            }

            .product-title {
                font-size: 1.9rem;
            }

            .product-price {
                font-size: 1.8rem;
            }

            .product-description {
                padding: 20px;
                font-size: 1rem;
            }

            .product-meta {
                flex-direction: column;
                gap: 15px;
            }

            .main-image {
                min-height: 350px;
            }

            .main-image img {
                max-height: 350px;
            }

            .image-placeholder {
                height: 350px;
            }

            .cart-form {
                padding: 25px;
            }

            .btn-primary {
                padding: 16px 30px;
                font-size: 1.1rem;
            }
        }

        @media (max-width: 576px) {
            .product-title {
                font-size: 1.7rem;
            }

            .product-price {
                font-size: 1.6rem;
                flex-direction: column;
                align-items: flex-start;
                gap: 5px;
            }

            .main-image {
                min-height: 300px;
            }

            .main-image img {
                max-height: 300px;
            }

            .image-placeholder {
                height: 300px;
            }

            .thumbnail-gallery {
                grid-template-columns: repeat(auto-fill, minmax(70px, 1fr));
            }

            .quantity-selector {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .btn-primary {
                padding: 14px 25px;
            }
        }

        /* Animation */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .product-container>* {
            animation: fadeIn 0.6s ease forwards;
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Breadcrumb Navigation -->
        <nav class="breadcrumb">
            <a href="/">Home</a> &nbsp;/&nbsp;
            <a href="/products">Products</a> &nbsp;/&nbsp;
            <span>
                <%= product.name %>
            </span>
        </nav>

        <div class="product-container">
            <!-- Product Images Section -->
            <div class="product-gallery">
                <% if (product.images && product.images.length> 0) { %>
                    <div class="main-image" id="mainImage">
                        <img src="/uploads/<%= product.images[0] %>" alt="<%= product.name %>" id="currentImage">
                    </div>

                    <% if (product.images.length> 1) { %>
                        <div class="thumbnail-gallery" id="thumbnailGallery">
                            <% product.images.forEach((img, index)=> { %>
                                <div class="thumbnail <%= index === 0 ? 'active' : '' %>" data-index="<%= index %>"
                                    onclick="changeImage('<%= img %>', this)">
                                    <img src="/uploads/<%= img %>" alt="<%= product.name %> - Image <%= index + 1 %>">
                                </div>
                                <% }); %>
                        </div>
                        <% } %>
                            <% } else { %>
                                <div class="image-placeholder">
                                    <i class="fas fa-mobile-alt"></i>
                                    <p>No Image Available</p>
                                </div>
                                <% } %>
            </div>

            <!-- Product Details Section -->
            <div class="product-details">
                <div class="product-brand">
                    <%= product.brand || 'Premium Mobile' %>
                </div>

                <h1 class="product-title">
                    <%= product.name %>
                </h1>

                <div class="product-price">
                    <span class="current-price">₹<%= product.price %></span>
                    <% if (product.originalPrice) { %>
                        <span class="original-price">₹<%= product.originalPrice %></span>
                        <% } %>
                </div>

                <!-- Product Meta Information -->
                <div class="product-meta">
                    <div class="meta-item">
                        <i class="fas fa-tag"></i>
                        <div>
                            <div class="meta-label">SKU</div>
                            <div class="meta-value">
                                <%= product.sku || 'N/A' %>
                            </div>
                        </div>
                    </div>

                    <div class="meta-item">
                        <i class="fas fa-box"></i>
                        <div>
                            <div class="meta-label">Availability</div>
                            <div class="meta-value stock-status in-stock">
                                <i class="fas fa-check-circle"></i> In Stock
                            </div>
                        </div>
                    </div>

                    <div class="meta-item">
                        <i class="fas fa-star"></i>
                        <div>
                            <div class="meta-label">Rating</div>
                            <div class="meta-value">4.8/5.0</div>
                        </div>
                    </div>
                </div>

                <div class="product-description">
                    <%= product.description %>
                </div>

                <!-- Add to Cart Form -->
                <form action="/cart/add" method="POST" class="cart-form">
                    <input type="hidden" name="productId" value="<%= product._id %>">

                    <div class="quantity-selector">
                        <label class="quantity-label">Quantity:</label>
                        <div class="quantity-input">
                            <button type="button" class="quantity-btn" onclick="decreaseQuantity()">-</button>
                            <input type="number" name="quantity" id="quantity" value="1" min="1" max="10">
                            <button type="button" class="quantity-btn" onclick="increaseQuantity()">+</button>
                        </div>
                    </div>

                    <button type="submit" class="btn-primary">
                        <i class="fas fa-shopping-cart"></i>
                        Add to Cart
                    </button>

                    <div class="stock-status in-stock">
                        <i class="fas fa-check-circle"></i>
                        In stock - Ready to ship
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Image gallery functionality
        function changeImage(imageSrc, thumbnail) {
            // Update main image
            document.getElementById('currentImage').src = `/uploads/${imageSrc}`;

            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
            });
            thumbnail.classList.add('active');

            // Add animation to main image
            const mainImage = document.getElementById('currentImage');
            mainImage.style.opacity = '0';
            setTimeout(() => {
                mainImage.style.opacity = '1';
            }, 10);
        }

        // Quantity control functions
        function increaseQuantity() {
            const quantityInput = document.getElementById('quantity');
            let currentValue = parseInt(quantityInput.value);
            if (currentValue < 10) {
                quantityInput.value = currentValue + 1;
            }
        }

        function decreaseQuantity() {
            const quantityInput = document.getElementById('quantity');
            let currentValue = parseInt(quantityInput.value);
            if (currentValue > 1) {
                quantityInput.value = currentValue - 1;
            }
        }

        // Input validation for quantity
        document.getElementById('quantity').addEventListener('change', function () {
            let value = parseInt(this.value);
            if (isNaN(value) || value < 1) {
                this.value = 1;
            } else if (value > 10) {
                this.value = 10;
            }
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function (e) {
            if (e.key === 'ArrowUp' || e.key === '+') {
                increaseQuantity();
                e.preventDefault();
            } else if (e.key === 'ArrowDown' || e.key === '-') {
                decreaseQuantity();
                e.preventDefault();
            }
        });

        // Initialize animations
        document.addEventListener('DOMContentLoaded', function () {
            const elements = document.querySelectorAll('.product-container > *');
            elements.forEach((el, index) => {
                el.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
</body>

</html>